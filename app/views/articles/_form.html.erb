<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :user_id, as: :hidden, input_html: { value: params[:user_id] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-info' %>
  </div>
<% end %>
